extends layout

block content
  .container
    .row
      .col-md-6.col-md-offset-3
        h1.text-center= title
        .panel.panel-login
          .panel-heading
            .row
              .col-xs-6.text-center
                a.active#login-form-link(href='#') Login
              .col-xs-6.text-center
                a#token-form-link(href='#') Token
          .panel-body
            .row
              .col-lg-12
                form#login-form(method='post', action='/authenticate/')
                  .form-group
                    input#email.form-control(type='text', name="email", placeholder='Email')
                    small.form-text.text-muted The email address that you registered your membership with
                  .form-group
                    input#password.form-control(type='password', name="password", placeholder='Password')
                    small.form-text.text-muted
                      | Your password at Nexudus Spaces (reset or contact front desk if you have forgotten)
                  input#mac(type='hidden', name="mac", value=mac)
                  input#ap(type='hidden', name="ap", value=ap)
                  input#url(type='hidden', name="url", value=url)
                  input#timestamp(type='hidden', name="timestamp", value=timestamp)
                  input#sitename(type='hidden', name="sitename", value=sitename)
                  input#ssid(type='hidden', name="ssid", value=ssid)
                  .form-group
                    .row
                      .col-md-6.col-md-offset-3
                        input(type='submit', class='form-control btn btn-primary', value='Submit')

                form#token-form(method='post', action='/authenticate/', style="display: none;")
                  .form-group
                    input#token-input.form-control(type='text', name="token", placeholder='Token')
                    small.form-text.text-muted Enter your hotspot voucher
                  .form-group
                    .row
                      .col-md-6.col-md-offset-3
                        input(type='submit', class='form-control btn btn-primary', value='Submit')
                  input#mac(type='hidden', name="mac", value=mac)
                  input#ap(type='hidden', name="ap", value=ap)
                  input#url(type='hidden', name="url", value=url)
                  input#timestamp(type='hidden', name="timestamp", value=timestamp)
                  input#sitename(type='hidden', name="sitename", value=sitename)
                  input#ssid(type='hidden', name="ssid", value=ssid)

  script.
    $( function () {
      $( '#login-form-link' ).click( function ( e ) {
        $( "#login-form" ).delay( 100 ).fadeIn( 100 );
        $( "#token-form" ).fadeOut( 100 );
        $( '#token-form-link' ).removeClass( 'active' );
        $( this ).addClass( 'active' );
        e.preventDefault();
      } );
      $( '#token-form-link' ).click( function ( e ) {
        $( "#token-form" ).delay( 100 ).fadeIn( 100 );
        $( "#login-form" ).fadeOut( 100 );
        $( '#login-form-link' ).removeClass( 'active' );
        $( this ).addClass( 'active' );
        e.preventDefault();
      } );

    } );